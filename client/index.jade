doctype html
html
  head
    meta(charset='utf-8')      
    title Checkers
    link(rel='stylesheet', href='/vendor/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href=isProd ? '/index.min.css' : '/index.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body
    h1 Checkers

    #controls
      button#reset Reset
      #chooser
        input#p1-choose(type='color', value = '#ff3322') 
        label P1
        input#p2-choose(type='color', value = '#113322')
        label P2
        button#start Start Game!
      #players
        #p1.player
        #p2.player
              
    -var array = [0,2,4,6]
    -var blackRow = ['black', 'white', 'black', 'white','black', 'white','black', 'white']
    -var whiteRow = ['white', 'black', 'white','black', 'white','black', 'white', 'black']

    each square, index in array
      ul(rowtype= square, row= index, piece=0)
        each item, index in blackRow
          li(class= item, col= index)
      ul(rowtype= square, row= index + 1)
        each item, index in whiteRow
          li(class= item, col= index, piece=0)


    
    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src='/vendor/lodash/lodash.min.js')
    script(src=isProd ? '/index.min.js' : '/index.js')
